<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <%- include('partials/header') %>

    <main>
        <!-- Hero Section -->
        <section class="hero">
            <h1>Hi, I'm <%= name %></h1>
            <h2><%= role %></h2>
            <div class="typing-effect" id="typing-text"></div>
            <div class="cta-buttons">
                <a href="#projects" class="cta-button">üîç View My Work</a>
                <a href="#contact" class="cta-button">üì¨ Let's Connect</a>
            </div>
        </section>

        <!-- About Section -->
        <section class="about" id="about">
            <div class="about-container">
                <div class="about-content">
                    <div class="section-header">
                        <h2>About Me</h2>
                        <div class="section-line"></div>
                    </div>
                    <p class="about-intro"><%= about.description %></p>
                    
                    <div class="achievements-grid">
                        <% about.achievements.forEach(achievement => { %>
                            <div class="achievement-item">
                                <div class="achievement-icon"><%= achievement.icon %></div>
                                <h3 class="achievement-title"><%= achievement.title %></h3>
                                <p class="achievement-description"><%= achievement.description %></p>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Skills Section -->
        <section class="skills" id="skills">
            <div class="skills-container">
                <div class="section-header">
                    <h2>Technical Expertise</h2>
                    <div class="section-line"></div>
                </div>
                
                <div class="skills-content">
                    <div class="skills-category">
                        <h3>Core Technologies</h3>
                        <div class="skill-tags primary">
                            <% about.skills.core.forEach(skill => { %>
                                <div class="skill-item">
                                    <%- skill.icon %>
                                    <span class="skill-name"><%= skill.name %></span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    
                    <div class="skills-category">
                        <h3>Development Tools</h3>
                        <div class="skill-tags secondary">
                            <% about.skills.development.forEach(skill => { %>
                                <div class="skill-item">
                                    <%- skill.icon %>
                                    <span class="skill-name"><%= skill.name %></span>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section class="projects" id="projects">
            <div class="section-header">
                <h2>Featured Projects</h2>
                <div class="section-line"></div>
            </div>
            <div class="project-grid">
                <% projects.forEach(project => { %>
                    <div class="project-card">
                        <div class="project-content">
                            <h3 class="project-title"><%= project.title %></h3>
                            <p class="project-description"><%= project.description %></p>
                            <div class="tech-stack">
                                <% project.tech.forEach(tech => { %>
                                    <span class="tech-tag"><%= tech %></span>
                                <% }); %>
                            </div>
                            <div class="project-links">
                                <a href="<%= project.github %>" target="_blank" class="github-button">
                                    <svg class="github-icon" viewBox="0 0 24 24">
                                        <path d="M12 0C5.37 0 0 5.37 0 12c0 5.3 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61-.546-1.385-1.335-1.755-1.335-1.755-1.087-.745.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.605-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 21.795 24 17.295 24 12c0-6.63-5.37-12-12-12"/>
                                    </svg>
                                    View on GitHub
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="contact" id="contact">
            <div class="contact-container">
                <div class="section-header">
                    <h2>Get In Touch</h2>
                    <div class="section-line"></div>
                </div>
                
                <p class="contact-description"><%= contact.description %></p>
                
                <div class="contact-grid">
                    <a href="mailto:<%= contact.email %>" class="contact-card email">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <h3>Email</h3>
                        <p><%= contact.email %></p>
                    </a>

                    <a href="<%= contact.linkedin %>" target="_blank" class="contact-card linkedin">
                        <div class="contact-icon">
                            <i class="fab fa-linkedin"></i>
                        </div>
                        <h3>LinkedIn</h3>
                        <p>Connect with me</p>
                    </a>

                    <a href="<%= contact.github %>" target="_blank" class="contact-card github">
                        <div class="contact-icon">
                            <i class="fab fa-github"></i>
                        </div>
                        <h3>GitHub</h3>
                        <p>Check my repos</p>
                    </a>

                    <a href="<%= contact.leetcode %>" target="_blank" class="contact-card leetcode">
                        <div class="contact-icon">
                            <i class="fas fa-code"></i>
                        </div>
                        <h3>LeetCode</h3>
                        <p>View my solutions</p>
                    </a>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
    
    <script>
        // Typing effect implementation
        <!-- const taglines = <%- JSON.stringify(taglines) %>; -->
        const typingText = document.getElementById('typing-text');
        let currentTaglineIndex = 0;
        let currentCharIndex = 0;
        let isDeleting = false;
        let typingSpeed = 100;

        function typeText() {
            const currentTagline = taglines[currentTaglineIndex];
            
            if (isDeleting) {
                typingText.textContent = currentTagline.substring(0, currentCharIndex - 1);
                currentCharIndex--;
            } else {
                typingText.textContent = currentTagline.substring(0, currentCharIndex + 1);
                currentCharIndex++;
            }

            if (!isDeleting && currentCharIndex === currentTagline.length) {
                isDeleting = true;
                typingSpeed = 2000;
            } else if (isDeleting && currentCharIndex === 0) {
                isDeleting = false;
                currentTaglineIndex = (currentTaglineIndex + 1) % taglines.length;
                typingSpeed = 100;
            }

            setTimeout(typeText, isDeleting ? 50 : typingSpeed);
        }

        typeText();
    </script>
    <script src="/js/main.js"></script>
</body>
</html>